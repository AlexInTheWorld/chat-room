            #input-div
              input#m(autocomplete='off' , maxlength='150')
            #button-div
              button() Send
        div#selection-panel
          div.emoji &#129409;
          div.emoji &#127383;
          div.emoji &#9940;
          div.emoji &#128077;
          div.emoji &#128078;
          div.emoji &#128521;
          div.emoji &#128542;
          div.emoji &#128515;
          div.emoji &#128522;
          div.emoji &#128127;
          div.emoji &#128526;
          div.emoji &#128540;
          div.emoji &#128563;
          div.emoji &#128545;
          div.emoji &#128546;
      a#logout(href='/logout')
        button(type="text") Logout
    #user_id(style="height: 0; visibility: hidden") #{author}
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
